#images_list_popup.popup   
  
  %h3.title
    Available Images
  %p
    %label.inline{ :for => "search_images" }
      Filter Images
    %input#search_images{ :name => "search_images", :type => "search", :value => "" }
  .images
    %table#images.index
      %thead
        %tr
          %th.name Folder 
          %th.actions Modify
      %tbody
        %tr.folder.level_1.children_visible#image_1
          %td.name{:style=>"padding-left: 3px"}  
            %span.w1 
              %img.expander{:title=>"", :src=>"/images/admin/collapse.png", :alt=>"toggle children"}/       
              %a{:href=>"/admin/images/edit", :title=>"/images/logo.png"} 
                
                %img{:title=>"", :src=>"/images/admin/page.png", :alt=>"image_icon"}/ 
                portraits   
          %td.actions
            
        %tr.image.level_2#image_1
          %td.name{:style=>"padding-left: 25px"}        
            %img{:title=>"", :src=>"/images/admin/image.png", :alt=>"image_icon"}/
            %a{:href=>"/admin/images/edit", :title=>"/images/logo.png"} sean.png
          %td.actions
            = link_to image('plus.png') + " Add Image", "/images/admin/image.png", :class=>"action"
        %tr.image.level_2#image_2
          %td.name{:style=>"padding-left: 25px"} 
            %img{:title=>"", :src=>"/images/admin/image.png", :alt=>"image_icon"}/
            %a{:href=>"/admin/images/edit", :title=>"/images/john.jpg"} john.jpg
          %td.actions    
            = link_to image('plus.png') + " Add Image", "/images/admin/image.png", :class=>"action"
        %tr.folder.level_1.children_hidden#folder_2
          %td.name{:style=>"padding-left: 3px"}
            %span.w1 
              %img.expander{:title=>"", :src=>"/images/admin/expand.png", :alt=>"toggle children"}/      
              %a{:href=>"/admin/images/edit", :title=>"/images/logo.png"}  
                %img{:title=>"", :src=>"/images/admin/page.png", :alt=>"image_icon"}/
                %span.title  logos
          %td.actions    
                    
        %tr.image.level_2#image_3{:style=>"display: none"} 
          %td.name{:style=>"padding-left: 25px"}
            %img{:title=>"", :src=>"/images/admin/image.png", :alt=>"image_icon"}/
            %a{:href=>"/admin/images/edit", :title=>"/images/sean.jpg"} logo.jpg
          %td.actions
            = link_to image('plus.png') + " Add Image", "/images/admin/image.png", :class=>"action"
       
  %p.close_link
    %a{ :href => "javascript: Element.closePopup('images_list_popup')" } 
      Close Folders    
